import java.util.Scanner;

public class domashna {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner inp=new Scanner(System.in);

		int a=inp.nextInt();
		int b=inp.nextInt();
		int h=inp.nextInt();
		
		area(a,b,h);
		System.out.println(area1(a,b,h));
	}
public static void area(double a, double b, double h) 
{double area;
area=((a+b)*h)/2;
System.out.print(area);}

public static double area1(double a, double b, double h) 
{double area;
area=((a+b)*h)/2;
return area;
	} 
}
